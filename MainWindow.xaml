<Window x:Class="VideoStreamPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="VILS SharpX" Width="1400" Height="900" WindowStartupLocation="CenterScreen"
    UseLayoutRounding="True" SnapsToDevicePixels="True"
        Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- A (top, centered) -->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="1" Margin="4" Padding="6">
            <Grid ClipToBounds="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" FontWeight="Bold" Text="AVTP Monitor / Generator" />
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="LblA" HorizontalAlignment="Center" Foreground="DimGray" />
                <TextBlock Grid.Row="0" Grid.Column="2" x:Name="LblRunInfoA" HorizontalAlignment="Right" Foreground="DimGray" />

                <Image Grid.Row="1" Grid.ColumnSpan="3" x:Name="ImgA" Stretch="Uniform"
                      SnapsToDevicePixels="True"
                      RenderTransformOrigin="0,0"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                      PreviewMouseWheel="Img_PreviewMouseWheel" MouseLeftButtonDown="Img_MouseLeftButtonDown" MouseLeftButtonUp="Img_MouseLeftButtonUp"
                      SizeChanged="Img_SizeChanged"
                      MouseMove="ImgA_MouseMove" MouseLeave="ImgA_MouseLeave"/>

                  <Canvas Grid.Row="1" Grid.ColumnSpan="3" x:Name="OvrA" IsHitTestVisible="False" />

                  <Border Grid.Row="1" Grid.ColumnSpan="3" x:Name="NoSignalA" Background="#808080" IsHitTestVisible="False" Visibility="Visible">
                      <TextBlock Text="Signal not available"
                                 Foreground="White" FontWeight="Bold" FontSize="28" FontFamily="Consolas"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" />
                  </Border>
            </Grid>
        </Border>

        <!-- B (bottom-left) -->
        <Border Grid.Row="1" Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="4,4,6,4" Padding="6">
            <Grid ClipToBounds="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" FontWeight="Bold" Text="LVDS Monitor / Generator" />
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="LblB" HorizontalAlignment="Center" Foreground="DimGray" />
                    <TextBlock Grid.Row="0" Grid.Column="2" x:Name="LblRunInfoB" HorizontalAlignment="Right" Foreground="DimGray" />

                <Image Grid.Row="1" Grid.ColumnSpan="3" x:Name="ImgB" Stretch="Uniform"
                      SnapsToDevicePixels="True"
                      RenderTransformOrigin="0,0"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                      PreviewMouseWheel="Img_PreviewMouseWheel" MouseLeftButtonDown="Img_MouseLeftButtonDown" MouseLeftButtonUp="Img_MouseLeftButtonUp"
                      SizeChanged="Img_SizeChanged"
                      MouseMove="ImgB_MouseMove" MouseLeave="ImgB_MouseLeave"/>

                  <Canvas Grid.Row="1" Grid.ColumnSpan="3" x:Name="OvrB" IsHitTestVisible="False" />

                  <Border Grid.Row="1" Grid.ColumnSpan="3" x:Name="NoSignalB" Background="#808080" IsHitTestVisible="False" Visibility="Visible">
                      <TextBlock Text="Signal not available"
                                 Foreground="White" FontWeight="Bold" FontSize="28" FontFamily="Consolas"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" />
                  </Border>
            </Grid>
        </Border>

        <!-- D (bottom-right) -->
        <Border Grid.Row="1" Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="6,4,4,4" Padding="6">
            <Grid ClipToBounds="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" FontWeight="Bold" Text="Comparison Monitor (LVDS-AVTP)" />
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="LblD" HorizontalAlignment="Center" Foreground="DimGray" />

                <Image Grid.Row="1" Grid.ColumnSpan="3" x:Name="ImgD" Stretch="Uniform"
                      SnapsToDevicePixels="True"
                        RenderTransformOrigin="0,0"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                        PreviewMouseWheel="Img_PreviewMouseWheel" MouseLeftButtonDown="Img_MouseLeftButtonDown" MouseLeftButtonUp="Img_MouseLeftButtonUp"
                        SizeChanged="Img_SizeChanged"
                      MouseMove="ImgD_MouseMove" MouseLeave="ImgD_MouseLeave"/>

                    <Canvas Grid.Row="1" Grid.ColumnSpan="3" x:Name="OvrD" IsHitTestVisible="False" />

                                        <Border Grid.Row="1" Grid.ColumnSpan="3" x:Name="NoSignalD" Background="#808080" IsHitTestVisible="False" Visibility="Visible">
                                                <TextBlock Text="Signal not available"
                                                                     Foreground="White" FontWeight="Bold" FontSize="28" FontFamily="Consolas"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
            </Grid>
        </Border>

        <!-- Controls / Status -->
        <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="4,10,4,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Buttons directly under panes -->
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,8">
                <Button x:Name="BtnLoadFiles" Content="Load Files…" Click="BtnLoadFiles_Click" Padding="10,4" />
                <Rectangle Width="1" Height="26" Fill="Gray" Margin="12,0,12,0" VerticalAlignment="Center" />

                <!-- Player buttons (keep order): Start Prev Next Record Stop -->
                <Button x:Name="BtnStart" Content="Start" Click="BtnStart_Click" Padding="10,4" Margin="0,0,6,0"/>
                <Button x:Name="BtnPrev" Content="Prev" Click="BtnSeqPrev_Click" Padding="10,4" Margin="0,0,6,0"/>
                <Button x:Name="BtnNext" Content="Next" Click="BtnSeqNext_Click" Padding="10,4" Margin="0,0,6,0"/>
                <Button x:Name="BtnRecord" Content="Record" Click="BtnRecord_Click" Padding="10,4" Margin="0,0,6,0" />
                <Button x:Name="BtnStop" Content="Stop" Click="BtnStop_Click" Padding="10,4" Margin="0,0,0,0" />

                <!-- Separate action: Save (placed to the right, with a vertical separator) -->
                <Rectangle Width="1" Height="26" Fill="Gray" Margin="12,0,12,0" VerticalAlignment="Center" />
                <Button x:Name="BtnSave" Content="Save" Click="BtnSaveReport_Click" Padding="10,4" />

                <Button x:Name="BtnOpenSnapshots" Click="BtnOpenSnapshots_Click" Padding="6,4" Margin="6,0,0,0"
                        ToolTip="Open frameSnapshots folder">
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="16" Text="&#xE8B7;" />
                </Button>

                <!-- Loop checkbox (visible only for AVI/PCAP) -->
                <Rectangle Width="1" Height="26" Fill="Gray" Margin="12,0,12,0" VerticalAlignment="Center" />
                <CheckBox x:Name="ChkLoopPlaying" Content="Loop playing" VerticalAlignment="Center"
                          Visibility="Collapsed" IsChecked="False" Checked="ChkLoopPlaying_Changed" Unchecked="ChkLoopPlaying_Changed" />

                <TextBlock x:Name="LblSaveFeedback"
                           Text=""
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           Foreground="DimGray"
                           TextTrimming="CharacterEllipsis"
                           MinWidth="220" />
            </StackPanel>

            <!-- Horizontal separator between buttons and configuration groups -->
            <Rectangle Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" 
                       Height="1" Fill="Gray" 
                       VerticalAlignment="Bottom" 
                       Margin="10,0,10,0" />

            <!-- Configuration groups: Hardware | Application Settings | Ethernet -->
            <Grid Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Margin="0,12,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- 1. Hardware Configuration -->
                <GroupBox Grid.Column="0" Header="Hardware Configuration" Padding="10" Margin="0,0,8,0" MinWidth="220">
                    <StackPanel Orientation="Vertical">
                        <!-- Mode of Operation -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="Mode of Operation:" VerticalAlignment="Center" Width="140" Margin="0,0,6,0"/>
                            <ComboBox x:Name="CmbModeOfOperation" Width="200" SelectedIndex="0" SelectionChanged="CmbModeOfOperation_SelectionChanged">
                                <ComboBoxItem Content="AVTP Live (Monitoring)"/>
                                <ComboBoxItem Content="Generator/Player (Files)"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- LSM Device Type -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,0">
                            <TextBlock Text="LSM Device Type:" VerticalAlignment="Center" Width="140" Margin="0,0,6,0"/>
                            <ComboBox x:Name="CmbLsmDeviceType" Width="200" SelectedIndex="0" SelectionChanged="CmbLsmDeviceType_SelectionChanged">
                                <ComboBoxItem Content="Osram 2.0"/>
                                <ComboBoxItem Content="Osram 2.05"/>
                                <ComboBoxItem Content="Nichia"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- 2. Application Settings -->
                <GroupBox Grid.Column="1" Header="Application Settings" Padding="10" Margin="0,0,8,0" MinWidth="320">
                    <StackPanel Orientation="Vertical">
                        <!-- Row 1: FPS, B Δ, Force dead pixel ID -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="FPS:" VerticalAlignment="Center" Width="60" Margin="0,0,6,0"/>
                            <TextBox x:Name="TxtFps" Width="60" Text="100" Margin="0,0,12,0"/>

                            <TextBlock Text="B Δ:" VerticalAlignment="Center" Width="40" Margin="0,0,6,0"/>
                            <TextBox x:Name="TxtBDelta" Width="60" Text="0" Margin="0,0,12,0" TextChanged="BDelta_TextChanged"/>

                            <TextBlock Text="Force dead pixel ID:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBox x:Name="TxtDeadPixelId" Width="80" Text="0" TextChanged="TxtDeadPixelId_TextChanged"/>
                        </StackPanel>

                        <!-- Row 2: Deviation threshold slider -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="Deviation threshold:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <Slider x:Name="SldDiffThr" Minimum="0" Maximum="255" Value="0" Width="180" Margin="0,0,6,0" ValueChanged="SldDiffThr_ValueChanged"/>
                            <TextBlock x:Name="LblDiffThr" Width="34" TextAlignment="Right" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Row 3: Checkboxes -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,0">
                            <CheckBox x:Name="ChkDarkPixelComp" Content="Dark pixel compensation" IsChecked="False" VerticalAlignment="Center"
                                      ToolTip="Boost neighbors around dark pixels: +15% (N/S/E/W), +10% (diagonals), +5% (2-step N/S/E/W)"
                                      Margin="0,0,12,0" Checked="ChkDarkPixelComp_Changed" Unchecked="ChkDarkPixelComp_Changed" />

                            <CheckBox x:Name="ChkZeroZeroWhite" Content="(0=0)→white" IsChecked="False" VerticalAlignment="Center"
                                      Checked="ChkZeroZeroWhite_Changed" Unchecked="ChkZeroZeroWhite_Changed"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- 3. Ethernet Configuration -->
                <GroupBox Grid.Column="2" Header="Ethernet Configuration" Padding="10" Margin="0,0,0,0" MinWidth="220">
                    <StackPanel Orientation="Vertical">
                        <!-- Network Interface Card -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="NIC:" VerticalAlignment="Center" Width="110" Margin="0,0,6,0"/>
                            <ComboBox x:Name="CmbLiveNic" Width="240" SelectionChanged="CmbLiveNic_SelectionChanged" Margin="0,0,6,0"/>
                            <Button Content="Refresh" Click="BtnRefreshNics_Click" Padding="8,4"/>
                        </StackPanel>

                        <!-- Source MAC -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="Source MAC:" VerticalAlignment="Center" Width="110" Margin="0,0,6,0"/>
                            <TextBox x:Name="TxtSrcMac" Width="160" Text="3C:CE:15:00:00:19" TextChanged="TxtMac_TextChanged"/>
                        </StackPanel>

                        <!-- Destination MAC -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,0">
                            <TextBlock Text="Destination MAC:" VerticalAlignment="Center" Width="110" Margin="0,0,6,0"/>
                            <TextBox x:Name="TxtDstMac" Width="160" Text="01:00:5E:16:00:12" TextChanged="TxtMac_TextChanged"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </Grid>

            <!-- Footer: Status information -->
            <GroupBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Header="Status" Padding="8" Margin="10,6,10,0">
                <StackPanel Orientation="Vertical">
                    <TextBlock x:Name="LblStatus" TextWrapping="Wrap" />
                    <TextBlock x:Name="LblDiffStats" TextWrapping="Wrap" Margin="0,4,0,0" />
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0" Visibility="Collapsed">
                        <TextBlock Text="AVTP in:" Margin="0,0,6,0" />
                        <TextBlock x:Name="LblAvtpInFps" Margin="0,0,16,0" />
                        <TextBlock Text="Dropped:" Margin="0,0,6,0" />
                        <TextBlock x:Name="LblAvtpDropped" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
