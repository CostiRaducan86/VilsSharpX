<Window x:Class="VideoStreamPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="VILS SharpX" Width="1200" Height="760" WindowStartupLocation="CenterScreen"
    UseLayoutRounding="True" SnapsToDevicePixels="True"
        Loaded="Window_Loaded" Closing="Window_Closing">
    <Window.Resources>
        <!-- Modern rounded corners style for all controls -->
        
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="#ABADB3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E5E5E5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="4,3"/>
            <Setter Property="BorderBrush" Value="#ABADB3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="BorderBrush" Value="#ABADB3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        Grid.Column="2"
                                        Focusable="false"
                                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="#ABADB3"
                                                BorderThickness="1"
                                                CornerRadius="3">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Column="1" Margin="0" Background="Transparent">
                                                    <Path x:Name="Arrow"
                                                          Grid.Column="1"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Data="M 0 0 L 4 4 L 8 0 Z"
                                                          Fill="#606060"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                            IsHitTestVisible="False"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            Margin="6,3,25,3"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="White"
                                            BorderThickness="1"
                                            BorderBrush="#ABADB3"
                                            CornerRadius="3"
                                            Margin="0,1,0,0">
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="Border"
                                    Width="16"
                                    Height="16"
                                    Background="White"
                                    BorderBrush="#ABADB3"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Margin="0,0,6,0">
                                <Path x:Name="CheckMark"
                                      Width="10"
                                      Height="10"
                                      Stretch="Fill"
                                      Stroke="#2C5AA0"
                                      StrokeThickness="2"
                                      Data="M 0,5 L 3,8 L 8,0"
                                      Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GroupBox Style -->
        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#ABADB3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0"
                                    Background="#F5F5F5"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1,1,1,0"
                                    CornerRadius="4,4,0,0"
                                    Padding="6,4">
                                <ContentPresenter ContentSource="Header"
                                                TextElement.FontWeight="SemiBold"/>
                            </Border>
                            <Border Grid.Row="1"
                                    Background="White"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1,0,1,1"
                                    CornerRadius="0,0,4,4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- RepeatButton Style (for NumericUpDown arrows) -->
        <Style TargetType="RepeatButton">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="#ABADB3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#C0C0C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- A (top, centered) -->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="#ABADB3" BorderThickness="1" CornerRadius="8" Margin="4" Padding="6">
            <Grid ClipToBounds="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" FontWeight="Bold" Text="AVTP Monitor / Generator" />
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="LblA" HorizontalAlignment="Center" Foreground="DimGray" />
                <TextBlock Grid.Row="0" Grid.Column="2" x:Name="LblRunInfoA" HorizontalAlignment="Right" Foreground="DimGray" />

                <Image Grid.Row="1" Grid.ColumnSpan="3" x:Name="ImgA" Stretch="Fill"
                      SnapsToDevicePixels="True"
                      RenderTransformOrigin="0,0"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                      PreviewMouseWheel="Img_PreviewMouseWheel" MouseLeftButtonDown="Img_MouseLeftButtonDown" MouseLeftButtonUp="Img_MouseLeftButtonUp"
                      SizeChanged="Img_SizeChanged"
                      MouseMove="ImgA_MouseMove" MouseLeave="ImgA_MouseLeave"/>

                  <Canvas Grid.Row="1" Grid.ColumnSpan="3" x:Name="OvrA" IsHitTestVisible="False" />

                  <Border Grid.Row="1" Grid.ColumnSpan="3" x:Name="NoSignalA" Background="#808080" IsHitTestVisible="False" Visibility="Visible">
                      <TextBlock Text="Signal not available"
                                 Foreground="White" FontWeight="Bold" FontSize="28" FontFamily="Consolas"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" />
                  </Border>
            </Grid>
        </Border>

        <!-- B (bottom-left) -->
        <Border Grid.Row="1" Grid.Column="0" BorderBrush="#ABADB3" BorderThickness="1" CornerRadius="8" Margin="4,4,6,4" Padding="6">
            <Grid ClipToBounds="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" FontWeight="Bold" Text="LVDS Monitor / Generator" />
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="LblB" HorizontalAlignment="Center" Foreground="DimGray" />
                    <TextBlock Grid.Row="0" Grid.Column="2" x:Name="LblRunInfoB" HorizontalAlignment="Right" Foreground="DimGray" />

                <Image Grid.Row="1" Grid.ColumnSpan="3" x:Name="ImgB" Stretch="Fill"
                      SnapsToDevicePixels="True"
                      RenderTransformOrigin="0,0"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                      PreviewMouseWheel="Img_PreviewMouseWheel" MouseLeftButtonDown="Img_MouseLeftButtonDown" MouseLeftButtonUp="Img_MouseLeftButtonUp"
                      SizeChanged="Img_SizeChanged"
                      MouseMove="ImgB_MouseMove" MouseLeave="ImgB_MouseLeave"/>

                  <Canvas Grid.Row="1" Grid.ColumnSpan="3" x:Name="OvrB" IsHitTestVisible="False" />

                  <Border Grid.Row="1" Grid.ColumnSpan="3" x:Name="NoSignalB" Background="#808080" IsHitTestVisible="False" Visibility="Visible">
                      <TextBlock Text="Signal not available"
                                 Foreground="White" FontWeight="Bold" FontSize="28" FontFamily="Consolas"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" />
                  </Border>
            </Grid>
        </Border>

        <!-- D (bottom-right) -->
        <Border Grid.Row="1" Grid.Column="1" BorderBrush="#ABADB3" BorderThickness="1" CornerRadius="8" Margin="6,4,4,4" Padding="6">
            <Grid ClipToBounds="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" FontWeight="Bold" Text="Comparison Monitor (LVDS-AVTP)" />
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="LblD" HorizontalAlignment="Center" Foreground="DimGray" />

                <Image Grid.Row="1" Grid.ColumnSpan="3" x:Name="ImgD" Stretch="Fill"
                      SnapsToDevicePixels="True"
                        RenderTransformOrigin="0,0"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                        PreviewMouseWheel="Img_PreviewMouseWheel" MouseLeftButtonDown="Img_MouseLeftButtonDown" MouseLeftButtonUp="Img_MouseLeftButtonUp"
                        SizeChanged="Img_SizeChanged"
                      MouseMove="ImgD_MouseMove" MouseLeave="ImgD_MouseLeave"/>

                    <Canvas Grid.Row="1" Grid.ColumnSpan="3" x:Name="OvrD" IsHitTestVisible="False" />

                                        <Border Grid.Row="1" Grid.ColumnSpan="3" x:Name="NoSignalD" Background="#808080" IsHitTestVisible="False" Visibility="Visible">
                                                <TextBlock Text="Signal not available"
                                                                     Foreground="White" FontWeight="Bold" FontSize="28" FontFamily="Consolas"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
            </Grid>
        </Border>

        <!-- Controls / Status -->
        <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="4,10,4,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Buttons directly under panes -->
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="40,0,0,8">
                <Button x:Name="BtnLoadFiles" Content="Load Files…" Click="BtnLoadFiles_Click" Padding="10,4" />
                <Rectangle Width="1" Height="26" Fill="Gray" Margin="12,0,12,0" VerticalAlignment="Center" />

                <!-- Player buttons (keep order): Start Prev Next Record Stop -->
                <Button x:Name="BtnStart" Content="Start" Click="BtnStart_Click" Padding="10,4" Margin="0,0,6,0"/>
                <Button x:Name="BtnPrev" Content="Prev" Click="BtnSeqPrev_Click" Padding="10,4" Margin="0,0,6,0"/>
                <Button x:Name="BtnNext" Content="Next" Click="BtnSeqNext_Click" Padding="10,4" Margin="0,0,6,0"/>
                <Button x:Name="BtnRecord" Content="Record" Click="BtnRecord_Click" Padding="10,4" Margin="0,0,6,0" />
                <Button x:Name="BtnStop" Content="Stop" Click="BtnStop_Click" Padding="10,4" Margin="0,0,0,0" />

                <!-- Separate action: Save (placed to the right, with a vertical separator) -->
                <Rectangle Width="1" Height="26" Fill="Gray" Margin="12,0,12,0" VerticalAlignment="Center" />
                <Button x:Name="BtnSave" Content="Save" Click="BtnSaveReport_Click" Padding="10,4" />

                <Button x:Name="BtnOpenSnapshots" Click="BtnOpenSnapshots_Click" Padding="6,4" Margin="6,0,0,0"
                        ToolTip="Open frameSnapshots folder">
                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="16" Text="&#xE8B7;" />
                </Button>

                <!-- Loop checkbox (visible only for AVI/PCAP) -->
                <Rectangle Width="1" Height="26" Fill="Gray" Margin="12,0,12,0" VerticalAlignment="Center" />
                <CheckBox x:Name="ChkLoopPlaying" Content="Loop playing" VerticalAlignment="Center"
                          Visibility="Collapsed" IsChecked="False" Checked="ChkLoopPlaying_Changed" Unchecked="ChkLoopPlaying_Changed" />

                <TextBlock x:Name="LblSaveFeedback"
                           Text=""
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           Foreground="DimGray"
                           TextTrimming="CharacterEllipsis"
                           MinWidth="220" />
            </StackPanel>

            <!-- Horizontal separator between buttons and configuration groups -->
            <Rectangle Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" 
                       Height="1" Fill="Gray" 
                       VerticalAlignment="Bottom" 
                       Margin="10,0,10,0"
                       IsHitTestVisible="False" />

            <!-- Configuration groups: Hardware | Application Settings | Ethernet -->
            <Grid Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Margin="0,12,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- 1. Hardware Configuration -->
                <GroupBox Grid.Column="0" Header="Hardware Configuration" Padding="10" Margin="0,0,8,0" MinWidth="220">
                    <StackPanel Orientation="Vertical">
                        <!-- Mode of Operation -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="Mode of Operation:" VerticalAlignment="Center" Width="140" Margin="0,0,6,0"/>
                            <ComboBox x:Name="CmbModeOfOperation" Width="200" SelectedIndex="0" SelectionChanged="CmbModeOfOperation_SelectionChanged">
                                <ComboBoxItem Content="AVTP Live (Monitoring)"/>
                                <ComboBoxItem Content="Generator/Player (Files)"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- LSM Device Type -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="LSM Device Type:" VerticalAlignment="Center" Width="140" Margin="0,0,6,0"/>
                            <ComboBox x:Name="CmbLsmDeviceType" Width="200" SelectedIndex="0" SelectionChanged="CmbLsmDeviceType_SelectionChanged">
                                <ComboBoxItem Content="Osram 2.0"/>
                                <ComboBoxItem Content="Osram 2.05"/>
                                <ComboBoxItem Content="Nichia"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- ECU Variant -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,0">
                            <TextBlock Text="ECU Variant:" VerticalAlignment="Center" Width="140" Margin="0,0,6,0"/>
                            <ComboBox x:Name="CmbEcuVariant" Width="200" SelectedIndex="0" SelectionChanged="CmbEcuVariant_SelectionChanged">
                                <ComboBoxItem Content="MB PLU-HD 1.0 LH"/>
                                <ComboBoxItem Content="MB PLU-HD 1.0 RH"/>
                                <ComboBoxItem Content="MB PLU-HD 2.0 LH"/>
                                <ComboBoxItem Content="MB PLU-HD 2.0 RH"/>
                                <ComboBoxItem Content="MB CHLC 1.0"/>
                                <ComboBoxItem Content="MB CHLC 2.0"/>
                                <ComboBoxItem Content="GM MLD 1.0 PLUS"/>
                                <ComboBoxItem Content="GM MLD 1.0 STANDARD"/>
                                <ComboBoxItem Content="GM MLD 1.0 MINI"/>
                                <ComboBoxItem Content="MB PLU 1.0 LH"/>
                                <ComboBoxItem Content="MB PLU 1.0 RH"/>
                                <ComboBoxItem Content="MB PLU 2.0 LH"/>
                                <ComboBoxItem Content="MB PLU 2.0 RH"/>
                                <ComboBoxItem Content="MB HLI 1.0 LH"/>
                                <ComboBoxItem Content="MB HLI 1.0 RH"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- 2. Application Settings -->
                <GroupBox Grid.Column="1" Header="Application Settings" Padding="10" Margin="0,0,8,0" MinWidth="320">
                    <StackPanel Orientation="Vertical">
                        <!-- FPS -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="FPS:" VerticalAlignment="Center" Width="160" Margin="0,0,6,0"/>
                            <TextBox x:Name="TxtFps" Width="80" Text="100"/>
                        </StackPanel>

                        <!-- Deviation value (formerly B Δ) -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="Deviation value:" VerticalAlignment="Center" Width="160" Margin="0,0,6,0"/>
                            <TextBox x:Name="TxtBDelta" Width="80" Text="0" TextChanged="BDelta_TextChanged"/>
                        </StackPanel>

                        <!-- Deviation threshold -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="Deviation threshold:" VerticalAlignment="Center" Width="160" Margin="0,0,6,0"/>
                            <Border BorderBrush="#ABADB3" BorderThickness="1" Background="White" CornerRadius="2">
                                <Grid Width="80" Height="24">
                                    <TextBox x:Name="TxtDiffThr" Text="0" 
                                             BorderThickness="0" 
                                             Background="Transparent"
                                             VerticalContentAlignment="Center"
                                             Padding="4,0,24,0"
                                             TextChanged="TxtDiffThr_TextChanged"/>
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="18">
                                        <RepeatButton x:Name="BtnDiffThrUp" Content="▲" 
                                                    FontSize="6" 
                                                    Height="12" 
                                                    Padding="0" 
                                                    BorderThickness="0,0,0,0.5"
                                                    Click="BtnDiffThrUp_Click"/>
                                        <RepeatButton x:Name="BtnDiffThrDown" Content="▼" 
                                                    FontSize="6" 
                                                    Height="12" 
                                                    Padding="0" 
                                                    BorderThickness="0"
                                                    Click="BtnDiffThrDown_Click"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Force dead pixel ID -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="Force dead pixel ID:" VerticalAlignment="Center" Width="160" Margin="0,0,6,0"/>
                            <TextBox x:Name="TxtDeadPixelId" Width="80" Text="0" TextChanged="TxtDeadPixelId_TextChanged"/>
                        </StackPanel>

                        <!-- Dark pixel compensation -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <CheckBox x:Name="ChkDarkPixelComp" Content="Dark pixel compensation" IsChecked="False" VerticalAlignment="Center"
                                      ToolTip="Boost neighbors around dark pixels: +15% (N/S/E/W), +10% (diagonals), +5% (2-step N/S/E/W)"
                                      Checked="ChkDarkPixelComp_Changed" Unchecked="ChkDarkPixelComp_Changed" />
                        </StackPanel>

                        <!-- Comparison option -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,0">
                            <CheckBox x:Name="ChkZeroZeroWhite" Content="Comparison option (0=0 →white, 255=255 → black)" IsChecked="False" VerticalAlignment="Center"
                                      ToolTip="When enabled: A=0 and B=0 renders white in Compare pane; A=255 and B=255 renders black in Compare pane"
                                      Checked="ChkZeroZeroWhite_Changed" Unchecked="ChkZeroZeroWhite_Changed"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- 3. Ethernet Configuration -->
                <GroupBox Grid.Column="2" Header="Ethernet Configuration" Padding="10" Margin="0,0,0,0" MinWidth="220">
                    <StackPanel Orientation="Vertical">
                        <!-- Network Interface Card -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="NIC:" VerticalAlignment="Center" Width="110" Margin="0,0,6,0"/>
                            <ComboBox x:Name="CmbLiveNic" Width="240" SelectionChanged="CmbLiveNic_SelectionChanged" Margin="0,0,6,0"/>
                            <Button Content="Refresh" Click="BtnRefreshNics_Click" Padding="8,4"/>
                        </StackPanel>

                        <!-- Source MAC -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="Source MAC:" VerticalAlignment="Center" Width="110" Margin="0,0,6,0"/>
                            <TextBox x:Name="TxtSrcMac" Width="160" Text="3C:CE:15:00:00:19" TextChanged="TxtMac_TextChanged"/>
                        </StackPanel>

                        <!-- Destination MAC -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="Destination MAC:" VerticalAlignment="Center" Width="110" Margin="0,0,6,0"/>
                            <TextBox x:Name="TxtDstMac" Width="160" Text="01:00:5E:16:00:12" TextChanged="TxtMac_TextChanged"/>
                        </StackPanel>

                        <!-- VLAN ID -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="VLAN ID:" VerticalAlignment="Center" Width="110" Margin="0,0,6,0"/>
                            <TextBox x:Name="TxtVlanId" Width="80" Text="70" TextChanged="TxtAvtpHeader_TextChanged"
                                     ToolTip="802.1Q VLAN ID (0-4095)"/>
                        </StackPanel>

                        <!-- VLAN Priority -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="VLAN Priority:" VerticalAlignment="Center" Width="110" Margin="0,0,6,0"/>
                            <TextBox x:Name="TxtVlanPriority" Width="80" Text="5" TextChanged="TxtAvtpHeader_TextChanged"
                                     ToolTip="802.1Q Priority Code Point (0-7)"/>
                        </StackPanel>

                        <!-- AVTP EtherType -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                            <TextBlock Text="AVTP EtherType:" VerticalAlignment="Center" Width="110" Margin="0,0,6,0"/>
                            <TextBox x:Name="TxtAvtpEtherType" Width="80" Text="0x22F0" TextChanged="TxtAvtpHeader_TextChanged"
                                     ToolTip="AVTP EtherType (hex, e.g. 0x22F0)"/>
                        </StackPanel>

                        <!-- Stream ID last byte -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,0">
                            <TextBlock Text="Stream ID byte:" VerticalAlignment="Center" Width="110" Margin="0,0,6,0"/>
                            <TextBox x:Name="TxtStreamIdLastByte" Width="80" Text="0x50" TextChanged="TxtAvtpHeader_TextChanged"
                                     ToolTip="Last byte of AVTP Stream ID (hex, e.g. 0x50)"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </Grid>

            <!-- Footer: Status information -->
            <GroupBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Header="Status" Padding="8" Margin="10,6,10,0">
                <StackPanel Orientation="Vertical">
                    <TextBlock x:Name="LblStatus" TextWrapping="Wrap" />
                    <TextBlock x:Name="LblDiffStats" TextWrapping="Wrap" Margin="0,4,0,0" />
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0" Visibility="Collapsed">
                        <TextBlock Text="AVTP in:" Margin="0,0,6,0" />
                        <TextBlock x:Name="LblAvtpInFps" Margin="0,0,16,0" />
                        <TextBlock Text="Dropped:" Margin="0,0,6,0" />
                        <TextBlock x:Name="LblAvtpDropped" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
